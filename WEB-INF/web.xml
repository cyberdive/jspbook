    <servlet-mapping>
        <servlet-name>
          sumavg
        </servlet-name>
        <url-pattern>
          /ch13/sumavg
        </url-pattern>
    </servlet-mapping>

    <taglib>
        <taglib-uri>
	   http://java.apache.org/tomcat/examples-taglib
        </taglib-uri>
        <taglib-location>
           /WEB-INF/jsp/track-taglib.tld
        </taglib-location>
    </taglib>
</web-app>
